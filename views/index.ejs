<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('inc/head') %>
  </head>
  <body>
    <div class="container py-4 d-flex flex-column" style="height: 100vh">
      <h4>Welcome, <%= user.username %>!</h4>
      <div
        id="messages"
        class="border p-3 rounded mb-3 flex-grow-1 overflow-auto bg-white"
      >
        <!-- Mesajlar burada olacak -->
      </div>
      <form id="messageForm" class="d-flex gap-2">
        <input
          class="form-control"
          type="text"
          id="messageInput"
          placeholder="Type your message..."
          required
        />
        <button class="btn btn-primary">Send</button>
      </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const form = document.getElementById("messageForm");
      const input = document.getElementById("messageInput");
      const messages = document.getElementById("messages");
      const username = "<%= user.username %>";

      socket.on("load messages", (msgs) => {
        msgs.forEach((msg) => appendMsg(msg));
      });

      socket.on("new message", (msg) => appendMsg(msg));

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        if (input.value.trim()) {
          socket.emit("new message", { text: input.value, sender: username });
          input.value = "";
        }
      });

      function appendMsg(msg) {
        const div = document.createElement("div");
        div.innerHTML = `<strong>${msg.sender} (${msg.time}):</strong> ${msg.text}`;
        messages.appendChild(div);
        messages.scrollTop = messages.scrollHeight;
      }
    </script>
  </body>
</html>
