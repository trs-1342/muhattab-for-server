<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('inc/head') %>
  </head>
  <body>
    <div class="container py-4 d-flex flex-column" style="height: 100vh">
      <h4>Welcome, <%= user.username %>!</h4>
      <div
        id="messages"
        class="border p-3 rounded mb-3 flex-grow-1 overflow-auto bg-white"
      >
        <!-- Mesajlar burada olacak -->
      </div>
      <form id="messageForm" class="d-flex gap-2">
        <input
          class="form-control"
          type="text"
          id="messageInput"
          placeholder="Type your message..."
          required
        />
        <button class="btn btn-primary">Send</button>
      </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const form = document.getElementById("messageForm");
      const input = document.getElementById("messageInput");
      const messages = document.getElementById("messages");
      const username = "<%= user.username %>";
      let canSend = true;

      function sanitize(text) {
        const div = document.createElement("div");
        div.innerText = text;
        return div.innerHTML;
      }

      socket.on("load messages", (msgs) => {
        msgs.forEach((msg) => appendMsg(msg));
      });

      socket.on("new message", (msg) => appendMsg(msg));

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        const rawMessage = input.value.trim();

        if (!canSend || rawMessage === "") return;

        // HTML içeriği varsa engelle
        if (/<.*?>/.test(rawMessage)) {
          alert("HTML etiketleri kullanılamaz!");
          return;
        }

        const safeMessage = sanitize(rawMessage);

        socket.emit("new message", { text: safeMessage, sender: username });
        input.value = "";
        canSend = false;

        setTimeout(() => {
          canSend = true;
        }, 3000); // 3 saniyelik bekleme
      });

      function appendMsg(msg) {
        const div = document.createElement("div");
        div.innerHTML = `<strong>${msg.sender} (${
          msg.time
        }):</strong> ${sanitize(msg.text)}`;
        messages.appendChild(div);
        messages.scrollTop = messages.scrollHeight;
      }
    </script>
  </body>
</html>
