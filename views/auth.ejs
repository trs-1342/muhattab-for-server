<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('inc/head') %>
    <style>
      .auth-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .auth-box {
        max-width: 400px;
        width: 100%;
      }
      .form-toggle {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="auth-container">
      <div class="auth-box card p-4 shadow">
        <div class="form-toggle">
          <input type="radio" name="mode" id="loginMode" checked />
          <label for="loginMode" class="mx-2">Login</label>
          <input type="radio" name="mode" id="registerMode" />
          <label for="registerMode" class="mx-2">Register</label>
        </div>
        <form method="POST" action="/auth">
          <input type="hidden" name="action" id="formAction" value="login" />
          <input
            class="form-control mb-2"
            type="text"
            name="username"
            placeholder="Username"
            required
          />
          <input
            class="form-control mb-2"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <button class="btn btn-primary w-100" type="submit">Submit</button>
        </form>
      </div>
    </div>
    <script>
      const loginRadio = document.getElementById("loginMode");
      const registerRadio = document.getElementById("registerMode");
      const actionInput = document.getElementById("formAction");

      loginRadio.addEventListener(
        "change",
        () => (actionInput.value = "login")
      );
      registerRadio.addEventListener(
        "change",
        () => (actionInput.value = "register")
      );
    </script>
  </body>
</html>
